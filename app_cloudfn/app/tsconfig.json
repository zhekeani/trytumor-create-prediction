{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "./",                    
    "esModuleInterop": true,       
    "forceConsistentCasingInFileNames": true,       

    /* Type Checking */
    "strict": true,   
    "skipLibCheck": true,
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
